<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/carStore</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">pass</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="show_sql">true</property>

        <mapping class="ru.sdroman.carstore.models.Car"/>
        <mapping class="ru.sdroman.carstore.models.Order"/>
        <mapping class="ru.sdroman.carstore.models.User"/>
        <mapping class="ru.sdroman.carstore.models.Body"/>
        <mapping class="ru.sdroman.carstore.models.DriveType"/>
        <mapping class="ru.sdroman.carstore.models.Engine"/>
        <mapping class="ru.sdroman.carstore.models.Model"/>
        <mapping class="ru.sdroman.carstore.models.Transmission"/>
    </session-factory>
</hibernate-configuration>