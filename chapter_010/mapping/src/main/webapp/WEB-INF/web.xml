    <servlet-class>ru.sdroman.carsales.controllers.json.JsonModelController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>Json Model Controller</servlet-name>
        <url-pattern>/model</url-pattern>
    </servlet-mapping>

