        <servlet-name>Add Controller</servlet-name>
        <servlet-class>ru.sdroman.carsales.controllers.AddUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add Controller</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>

    <servlet>
