<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <listener>
        <listener-class>
            org.apache.commons.fileupload.servlet.FileCleanerCleanup
        </listener-class>
    </listener>
    <listener>
        <listener-class>ru.sdroman.carsales.controllers.Init</listener-class>
    </listener>

    <servlet>
        <servlet-name>Json Order Controller</servlet-name>
        <servlet-class>ru.sdroman.carsales.controllers.json.JsonOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Json Order Controller</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Create Order</servlet-name>
        <servlet-class>ru.sdroman.carsales.controllers.CreateOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Create Order</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>Json Car Controller</servlet-name>
    <servlet-class>ru.sdroman.carsales.controllers.json.JsonCarController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>Json Car Controller</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login Controller</servlet-name>
        <servlet-class>ru.sdroman.carsales.controllers.LoginController</servlet-class>
