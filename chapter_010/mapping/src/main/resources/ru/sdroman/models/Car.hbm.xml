<?xml version="1.0" encoding="UTF-8"?>
<hibrenate-mapping>
    <class name="ru.sdroman.models.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="login" column="login"/>
        <many-to-one name="body" column="id_body" class="ru.sdroman.models.Body"/>
        <many-to-one name="driveType" column="drivetype" class="ru.sdroman.models.DriveType"/>
        <many-to-one name="engine" column="id_engine" class="ru.sdroman.models.Engine"/>
        <many-to-one name="model" column="model" class="ru.sdroman.models.Model"/>
        <many-to-one name="transmission" column="transmission" class="ru.sdroman.models.Transmission"/>
    </class>
</hibrenate-mapping>