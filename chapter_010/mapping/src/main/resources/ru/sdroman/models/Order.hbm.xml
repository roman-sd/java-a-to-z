<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping>
    <class name="ru.sdroman.models.Order" table="orders">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="sold" column="sold"/>
        <property name="price" column="price"/>
        <property name="created" column="created"/>
        <many-to-one name="car" column="id_car" class="ru.sdroman.models.Car"/>
        <many-to-one name="user" column="id_user" class="ru.sdroman.models.User"/>
    </class>
</hibernate-mapping>