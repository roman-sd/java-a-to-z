<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping>
    <class name="ru.sdroman.carsales.models.User" table="users">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="login" column="login"/>
        <property name="password" column="password"/>
        <set name="orders" inverse="true" fetch="select" cascade="all">
            <key column="id_order" not-null="true"/>
            <one-to-many class="ru.sdroman.carsales.models.Order"/>
        </set>
    </class>
</hibernate-mapping>