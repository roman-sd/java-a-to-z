<web-app>
    <servlet>
        <servlet-name>User Controller Servlet</servlet-name>
        <servlet-class>sdroman.controllers.UserController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Update Servlet</servlet-name>
        <servlet-class>sdroman.controllers.UpdateController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Add Servlet</servlet-name>
        <servlet-class>sdroman.controllers.AddController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Delete Servlet</servlet-name>
        <servlet-class>sdroman.controllers.DeleteController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Signin Servlet</servlet-name>
        <servlet-class>sdroman.controllers.Signin</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Logout Servlet</servlet-name>
        <servlet-class>sdroman.controllers.Signout</servlet-class>
    </servlet>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>sdroman.filters.AuthFilter</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>User Controller Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Update Servlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Add Servlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Delete Servlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Signin Servlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout Servlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
</web-app>